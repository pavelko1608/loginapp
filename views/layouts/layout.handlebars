<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Loginapp</title>
    <link rel="stylesheet" href="/css/foundation.min.css">
    <link rel="stylesheet" href="/css/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  
  	<div>
  		<div class="menu-centered">
  			
	  			<ul class="menu">
	  				{{#if user}}
	  				<li><a class="button" href="/">Dashboard</a></li>
	  				<li><a class="button" href="/users/logout">logout</a></li>
	  				{{else}}
	  				<li><a class="button" href="/users/login">Login</a></li>
	  				<li><a class="button" href="/users/register">Register</a></li>
	  				{{/if}}
	  			</ul>
  			
  		</div>

  		<div class="row">
  			<div>
  				{{#if success_msg}}
					<div>{{success_msg}}</div>
  				{{/if}}

  				{{#if error_msg}}
					<div>{{error_msg}}</div>
  				{{/if}}

  				{{#if error}}
					<div>{{error}}</div>
  				{{/if}}

  				{{{body}}}
  			</div>
  			
  		</div>
  	</div>
  </body>
</html>